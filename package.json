{
  "dependencies": {
    "express": "^4.18.2"
  },
  "scripts": {
    "start": "node app.js",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js",
      "!**/app.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/jest.config.js**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
